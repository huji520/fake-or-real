<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".UserAreaActivity">


    <ImageButton
        android:id="@+id/avatar_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/personal_img"
        android:background="@color/background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/set_emoji"
        android:layout_width="163dp"
        android:layout_height="47dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/change_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avatar_image" />

    <Button
        android:id="@+id/set_userame"
        android:layout_width="194dp"
        android:layout_height="47dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/change_username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/set_emoji"
        />

    <TextView
        android:id="@+id/username_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        style="@style/ShadowedText"
        android:textColor="@color/textColor"
        android:textSize="20sp"
        android:text=""
        app:layout_constraintLeft_toRightOf="@id/set_userame"
        app:layout_constraintTop_toBottomOf="@+id/set_emoji" />

    <Button
        android:id="@+id/set_email"
        android:layout_width="152dp"
        android:layout_height="47dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/change_mail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/set_userame" />

    <TextView
        android:id="@+id/email_user_area_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        style="@style/ShadowedText"
        android:textColor="@color/textColor"
        android:textSize="20sp"
        android:text=""
        app:layout_constraintStart_toEndOf="@id/set_email"
        app:layout_constraintTop_toBottomOf="@+id/set_userame" />

    <Button
        android:id="@+id/set_password"
        android:layout_width="196dp"
        android:layout_height="47dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/change_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/set_email" />

    <Button
        android:id="@+id/show_password"
        android:layout_width="193dp"
        android:layout_height="47dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/show_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/set_password" />

    <TextView
        android:id="@+id/password_user_area_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        style="@style/ShadowedText"
        android:textColor="@color/textColor"
        android:textSize="20sp"
        android:text="@string/hidden_password"
        app:layout_constraintStart_toEndOf="@id/show_password"
        app:layout_constraintTop_toBottomOf="@+id/set_password" />

    <Button
        android:id="@+id/user_area_back_to_main"
        android:layout_width="136dp"
        android:layout_height="60dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/back_no_arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>